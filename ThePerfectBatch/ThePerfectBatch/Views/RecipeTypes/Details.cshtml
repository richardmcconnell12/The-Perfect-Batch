@model ThePerfectBatch.Models.RecipeType

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>RecipeType</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Recipes)
        </dt>
        @foreach (var recipe in Model.Recipes)
                {
                    <dd>
                        <a asp-area="" asp-controller="Recipes" asp-action="Details" asp-route-id="@recipe.RecipeId">@(recipe.Name)</a>
                    </dd>
                }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.RecipeTypeId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
